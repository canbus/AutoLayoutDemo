<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="86px"
        android:layout_marginTop="26px"
        android:background="#FFF">
        <ImageView
            android:id="@+id/id_iv_add"
            android:layout_width="34px"
            android:layout_height="34px"
            android:background="@mipmap/ic_launcher"
            android:layout_marginLeft="276px"
            android:layout_marginTop="26px"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:layout_toRightOf="@id/id_iv_add"
            android:text="新增"
            android:textSize="32px"
            android:textColor="#1FB6C4"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/topbar"
        android:id="@+id/id_RecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="26px"
        >
    </android.support.v7.widget.RecyclerView>

    <!--<include layout="@layout/layout_item"-->
        <!--android:layout_below="@id/topbar"-->
        <!--android:layout_marginTop="26px"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="114px"></include>-->

</com.zhy.autolayout.AutoRelativeLayout>